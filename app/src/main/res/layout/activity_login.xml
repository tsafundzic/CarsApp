<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cobe.carapp.ui.login.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvEnterYourEmailAndPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="20sp"
            android:text="@string/enter_your_email_and_password"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/etInputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEnterYourEmailAndPassword"
            android:layout_margin="20sp"
            android:drawableLeft="@drawable/ic_email"
            android:hint="@string/email" />

        <EditText
            android:id="@+id/etInputPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etInputEmail"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:drawableLeft="@drawable/ic_password"
            android:hint="@string/password" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etInputPassword"
            android:layout_margin="20sp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:text="@string/login"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
