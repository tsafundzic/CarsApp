<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/llActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="@dimen/margin_car_list">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_car_details"
            android:src="@drawable/ic_back"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_car_list"
            android:gravity="center"
            android:text="@string/car_details"
            android:textColor="@color/white"
            android:textSize="@dimen/text_big" />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpImageViewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_big_height" />

    <TextView
        android:id="@+id/tvCarName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:padding="@dimen/margin_car_details"
        android:textColor="@color/white"
        android:textSize="@dimen/text_big"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llCarDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCarAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_car_details"
            android:gravity="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvCarSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_car_details"
            android:gravity="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvCarRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_car_details"
            android:gravity="center"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>

